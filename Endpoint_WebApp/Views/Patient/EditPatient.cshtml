@using Nursing_Service.Application.Services.Patient.Command.Update
@model UpdatePatientRequestInfo
@{
    if (User.IsInRole("Admin"))
    {
        Layout = "_AdminDashboard_Layout";
    }
    else if (User.IsInRole("Nurse"))
    {
        Layout = "_NurseDashboard_Layout";
    }
    else
    {
        Layout = "_DefaultLayout";
    }
}
@section Styles {
    <link rel="stylesheet" href="~/lib/AdminDashboardAssets/css/EditTemplate.css" />
}

<div class="form-header">
    <h2>ویرایش اطلاعات بیمار</h2>
    <span class="subtitle">لطفا اطلاعات جدید را وارد کنید</span>
</div>

<form asp-action="EditPatient" method="post" class="app-form">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="FullName"></label>
        <input asp-for="FullName" class="form-control" />
        <span asp-validation-for="FullName" class="field-validation"></span>
    </div>
    @* <div class="form-group"> *@
    @*     <label asp-for="NationalCode"></label> *@
    @*     <input asp-for="NationalCode" class="form-control" /> *@
    @*     <span asp-validation-for="NationalCode" class="field-validation"></span> *@
    @* </div> *@
    <div class="form-group">
        <label asp-for="Age"></label>
        <input asp-for="Age" class="form-control" type="number" min="1" />
        <span asp-validation-for="Age" class="field-validation"></span>
    </div>
    @* <div class="form-group"> *@
    @*     <label asp-for="Gender"></label> *@
    @*     <select asp-for="Gender" class="form-control"> *@
    @*         <option value="">انتخاب کنید</option> *@
    @*         <option value="0">مرد</option> *@
    @*         <option value="1">زن</option> *@
    @*     </select> *@
    @*     <span asp-validation-for="Gender" class="field-validation"></span> *@
    @* </div> *@
    <div class="form-group">
        <label asp-for="Height"></label>
        <input asp-for="Height" class="form-control" type="number" min="1" />
        <span asp-validation-for="Height" class="field-validation"></span>
    </div>
    <div class="form-group">
        <label asp-for="Weight"></label>
        <input asp-for="Weight" class="form-control" type="number" min="1" />
        <span asp-validation-for="Weight" class="field-validation"></span>
    </div>
    <div class="form-group">
        <label asp-for="PhoneNumber"></label>
        <input asp-for="PhoneNumber" class="form-control" />
        <span asp-validation-for="PhoneNumber" class="field-validation"></span>
    </div>
    <div class="form-group">
        <label asp-for="Address"></label>
        <input asp-for="Address" class="form-control" />
        <span asp-validation-for="Address" class="field-validation"></span>
    </div>
    <div class="form-group">
        <label asp-for="IllnessHistory"></label>
        <textarea asp-for="IllnessHistory" class="form-control"></textarea>
        <span asp-validation-for="IllnessHistory" class="field-validation"></span>
    </div>
    <button type="submit" class="btn btn-primary">ذخیره تغییرات</button>
</form>

