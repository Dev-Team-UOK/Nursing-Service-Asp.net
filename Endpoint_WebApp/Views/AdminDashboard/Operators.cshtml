@using Nursing_Service.Application.Services.Users.Query
@model List<GetUserResultDTO>
@{
    Layout = "_AdminDashboard_Layout";
}

<div class="main-header">
    <h2>لیست اپراتورها</h2>
    <span class="subtitle">اطلاعات اپراتور</span>
</div>
<table class="patients-table">
    <div class="table-actions">
        <a class="add-btn" href="/Operators/Create-Operator">
            <span class="btn-text">افزودن</span>
            <span class="material-icons">add</span>
        </a>
    </div>

    <thead>
        <tr>
            <th>نام کاربری</th>
            <th>نام</th>
            <th>نام خانوادگی</th>
            <th>تلفن همراه</th>
            <th>ایمیل</th>
            <th>عملیات</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var user in Model)
            {
                <tr>
                    <td>@user.UserName</td>
                    <td><span class="status">@user.FirstName</span></td>
                    <td><span class="status">@user.LastName</span></td>
                    <td>@user.PhoneNumber</td>
                    <td>@user.Email</td>
                    <td>
                        <a class="edit-btn" href="/Operators/View-Operator?id=@user.Id">مشاهده</a>
                        <a class="edit-btn" href="/Operators/Edit-Operator?id=@user.Id">ویرایش</a>
                        <a class="edit-btn status offline" href="/Operators/Delete-Operator?id=@user.Id">حذف</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="6" style="text-align:center;">اپراتوری یافت نشد.</td>
            </tr>
        }
    </tbody>
</table>
