@using Nursing_Service.Application.Services.Service.Query.GetServices
@model List<GetServiceResultDTO>
@{
    Layout = "_AdminDashboard_Layout";
}

<div class="main-header">
    <h2>مدیریت سرویس‌ها</h2>
    <span class="subtitle">سرویس‌ها </span>
</div>
<table class="patients-table">
    <div class="table-actions">
        <a class="add-btn" href="/Services/Create-Service">
            <span class="btn-text">افزودن</span>
            <span class="material-icons">add</span>
        </a>
    </div>
    <thead>
        <tr>
            <th>شناسه</th>
            <th>سرویس</th>
            <th>هزینه(تومان)</th>
            <th>زمان انجام(دقیقه)</th>
            <th>عملیات</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var service in Model)
            {
                <tr>
                    <td><span class="status">@service.Id</span></td>
                    <td><span class="status">@service.Name</span></td>
                    <td>@service.Cost.ToString("N0")</td>
                    <td>@service.MinDuration</td>
                    <td>
                        <a class="edit-btn" href="/Services/View-Service?id=@service.Id">مشاهده</a>
                        <a class="edit-btn" href="/Services/Edit-Service?id=@service.Id">ویرایش</a>
                        <a class="edit-btn status offline" href="/Services/Delete-Service?id=@service.Id">حذف</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="5" style="text-align:center;">هیچ سرویسی یافت نشد.</td>
            </tr>
        }
    </tbody>
</table>