@using Nursing_Service.Application.Services.PatinetNeedService.Query.GetPatientNeedServices
@model List<GetPatientNeedServiceResultDTO>
@{
    Layout = "_AdminDashboard_Layout";
}
<div class="main-header">
    <h2>لیست درخواست‌ها</h2>
    <span class="subtitle">درخواست‌ها </span>
</div>
<table class="patients-table">
    <div class="table-actions">
    </div>
    <thead>
        <tr>
            <th>شناسه</th>
            <th>تاریخ</th>
            <th>بیمار</th>
            <th>پرستار</th>
            <th>سوپروایزر</th>
            <th>سرویس</th>
            <th>عملیات</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var request in Model)
            {
                <tr>
                    <td><span class="status">@request.Id</span></td>
                    <td>@request.ServiceDateTime</td>
                    <td><span class="status">@request.PatientFullName</span></td>
                    <td>@request.NurseFullName</td>
                    <td>@request.SuperVisorFullName</td>
                    <td>@request.ServiceName</td>
                    <td>
                        <button class="edit-btn">ویرایش</button>
                        <button class="edit-btn status offline">حذف</button>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="7" style="text-align:center;">هیچ درخواستی یافت نشد.</td>
            </tr>
        }
    </tbody>
</table>
